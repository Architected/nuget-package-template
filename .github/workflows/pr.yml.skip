name: Tests

on:
  pull_request:
    types: [opened, synchronize, reopened, ready_for_review]
jobs:
  lint:
    name: Run tests
    runs-on: ubuntu-latest
    container: 'node:14.18.0-alpine'
    steps:
      - uses: actions/checkout@v3
      - run: npm ci
      - run: npm build --if-present
      - run: npm test
